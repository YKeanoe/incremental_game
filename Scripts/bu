describe('calculator', function () {
    
    var $controller, $rootScope, $interval, $location, $route, $scope;
    var ModelInterval, GridLocation, buildingFactory;

    beforeEach(function(){
        module('myApp');
        inject(function(_$controller_, _$rootScope_, _$interval_, _$location_, _$route_,
                _userService_, _ModelInterval_, _GridLocation_, _buildingFactory_){

            $scope = $rootScope.new();

            userService = _userService_;
            ModelInterval = _ModelInterval_;
            GridLocation = _GridLocation_;
            buildingFactory = _buildingFactory_;

            $controller = _$controller_('mainController', { 
                $scope: $scope,
                $interval: _$interval_,
                $location: _$location_,
                $route: _$route_,
                userService: userService,
                ModelInterval: ModelInterval,
                GridLocation: GridLocation,
                buildingFactory: buildingFactory
            });                
        });
    });        

// app.controller('mainController', function(userService, ModelInterval, GridLocation
// , buildingFactory, $scope, $interval, $location, $route) {
        

    it('test1', function() {
      
        // the assertion checks the expected result
        expect($scope.testVar).toBe(0);
        // expect(2).toBe(2);
    });

});




