describe('calculator', function () {
    
    var $controller, $rootScope, $scope;
    var tFactory, t2Factory;
    var controller;
    // var tFactory, t2Factory;

    beforeEach(function(){
        module('tApp');
        inject(function(_$controller_, _$rootScope_, $injector){
            $controller = _$controller_;
            $rootScope = _$rootScope_;
            tFactory = $injector.get('tFactory');
            t2Factory = $injector.get('t2Factory');
        });

        $scope = $rootScope.$new();
        
        controller = $controller('tController', { $scope: $scope, tFactory: tFactory, t2Factory: t2Factory });

    });        

    it('test1', function() {
        expect($scope.a).toBe(1);
    });

    it('test2', function() {
        expect($scope.b).toBe(1);
    });

    it('test3', function() {
        expect($scope.sum()).toBe(2);
    });

    it('test4', function() {
        expect($scope.d).toBe(20);
    });
    
    it('test5', function() {
        expect($scope.tf()).toBe(20);
    });

    it('test6', function() {
        expect($scope.tf2()).toBe(33);
    });
    
});
